@{

    Layout = "_Layout";

}
@using System.Data
@model DataTable

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4 ">City List</h1>
        <br />
        <div class="d-flex  float-right">
            <form method="post">
            <button type="submit" asp-action="Add" asp-controller="LOC_City" class="btn btn-primary btn-sm pr-2">Add City</button>
            </form>
            &nbsp;&nbsp;
            <div class="pull-right">
                <div id="sample_1_filter" class="dataTables_filter">
                   <input type="text" class="form-control h-75" placeholder="search" id="sample_1" aria-controls="sample_1" />
                </div>
            </div>

        </div>
    </div>
</div>

<table class="table" id="sample_1">
    <thead>
    <th>CountryName</th>
    <th>StateName</th>
    <th>CityName</th>   
    <th>PinCode</th>
    <th>CreationDate</th>
    <th>ModificationDate</th>
    <th colspan="2" class="text-center">Action</</th>
    </thead>
    <tbody id="sample_2">
        @foreach (DataRow dr in Model.Rows)
        {
            <tr>
                <td>@dr["CountryName"]</td>
                <td>@dr["StateName"]</td>
                <td>@dr["CityName"]</td>             
                <td>@dr["PinCode"]</td>
                <td>@Convert.ToDateTime(dr["CreationDate"]).ToString("dd-MM-yyyy")</td>
                <td>@Convert.ToDateTime(dr["ModificationDate"]).ToString("dd-MM-yyyy")</td>
                <td>
                    <form method="post" asp-action="Delete" asp-controller="LOC_City">
                        <input type="hidden" name="CityID" value="@Convert.ToInt32(dr["CityID"]).ToString()"/>
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete : @dr["CityName"]')"><i class="fa-solid fa-trash"></i></button>
                    </form>
                </td>
                <td>
                    <form method="post" asp-action="Add" asp-controller="LOC_City" asp-route-CityID="@Convert.ToInt32(dr["CityID"])">
                        <input type="hidden" name="CityID" value="@Convert.ToInt32(dr["CityID"]).ToString()" />
                        <button type="submit" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}                       