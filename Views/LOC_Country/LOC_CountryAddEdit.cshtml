@{
    ViewData["title"] = "Country Add/Edit";
    Layout = "_Layout";
}

@model LOC_CountryModel
<div class="row">
    <h5 style="text-align:center">@TempData["CountryInsertMessage"]</h5>
    <div class="col-md-6">
        <form method="post" asp-action="Save" asp-controller="LOC_Country" >
            @Html.HiddenFor(x=>x.CountryID)
           
            <div class="form-group">
                <lable>Enter CountryName:-</lable>
                <input type="text" class="form-control" placeholder="Enter CountryName" asp-for="CountryName" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <lable>Enter CountryCode:-</lable>
                <input type="text" class="form-control" placeholder="Enter CountryCode" asp-for="CountryCode" />
            </div>
           
           
         
            
            <div class="text-center">
                <input type="submit" class="btn btn-outline-success" />
                <a class="btn btn-outline-danger" asp-action="Index" asp-controller="LOC_Country">Cancle</a>
            </div>
        </form>
        
    </div>
</div>
